{
  "name": "nipponmedia",
  "version": "1.0.0",
  "description": "The premiere application allows you to track all of your favorite anime and manga! Sign up and join the conversation today.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "install": "cd client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=true npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Crowe828/nipponmedia.git"
  },
  "author": "Christian Rowe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Crowe828/nipponmedia/issues"
  },
  "homepage": "https://github.com/Crowe828/nipponmedia#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.20",
    "react-alert": "^7.0.2",
    "react-alert-template-mui": "^1.0.7"
  }
}
